{
  "name": "employee-management",
  "version": "1.0.0",
  "description": "Back-end system demo",
  "main": "server.js",
  "scripts": {
    "start": "node ./lib/app/server",
    "ci:prod": "npm install --frozen-lockfile --ignore-scripts --prod",
    "build": "cross-env NODE_ENV=production tsc",
    "start:dev": "cross-env NODE_ENV=development && set DEBUG=employee-management:server && ts-node-dev --respawn --transpile-only ./src/app/server --watch ./src",
    "start:prod": "cross-env NODE_ENV=production tsc && node ./lib/app/server.js",
    "test": "cross-env NODE_ENV=test mocha ./src/tests/*.test.ts --watch --reporter-options reportDir=test-reports/mochawesome --reporter-options jsonReport=true",
    "coverage": "cross-env NODE_ENV=test nyc mocha ./src/**/*.test.ts --reporter-options reportDir=test-reports/coverage",
    "prettier": "prettier --write ./src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gknguyen/employee-management.git"
  },
  "author": "Nguyen Truong Giang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gknguyen/employee-management/issues"
  },
  "homepage": "https://github.com/gknguyen/employee-management#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "cryptojs": "^2.5.3",
    "debug": "^4.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "helmet": "^4.1.1",
    "http": "0.0.1-security",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash.times": "^4.3.2",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.13",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash.times": "^4.3.6",
    "@types/mocha": "^8.0.3",
    "@types/morgan": "^1.9.1",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "chai": "^4.2.0",
    "isparta": "^4.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^8.1.3",
    "mochawesome": "^6.1.1",
    "mochawesome-screenshots": "^1.7.3",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  }
}
